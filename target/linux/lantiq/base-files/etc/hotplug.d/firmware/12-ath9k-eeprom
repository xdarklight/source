#!/bin/sh
# Based on ar71xx 10-ath9k-eeprom

[ -e /lib/firmware/$FIRMWARE ] && exit 0

. /lib/functions.sh
. /lib/functions/system.sh
. /lib/functions/lantiq.sh
. /lib/upgrade/nand.sh

ath9k_eeprom_die() {
	echo "ath9k eeprom: " "$*"
	exit 1
}

ath9k_eeprom_extract_raw() {
	local source=$1
	local offset=$2
	local swap=$3
	local size=2048
	local bs=1
	local conv=

	if [ $swap -gt 0 ]; then
		bs=2
		conv="conv=swab"
	fi

	size=$(($size / $bs))
	offset=$(($offset / $bs))

	dd if=$source of=/lib/firmware/$FIRMWARE bs=$bs skip=$offset count=$size $conv 2>/dev/null || \
			ath9k_eeprom_die "failed to extract from $mtd"
}

ath9k_eeprom_extract() {
	local part=$1
	local offset=$2
	local swap=$3
	local mtd

	mtd=$(find_mtd_chardev $part)
	[ -n "$mtd" ] || \
		ath9k_eeprom_die "no mtd device found for partition $part"

	ath9k_eeprom_extract_raw $mtd $offset $swap
}

ath9k_ubi_eeprom_extract() {
	local part=$1
	local offset=$2
	local swap=$3
	local ubidev=$(nand_find_ubi $CI_UBIPART)
	local ubi

	ubi=$(nand_find_volume $ubidev $part)
	[ -n "$ubi" ] || \
		ath9k_eeprom_die "no UBI volume found for $part"

	ath9k_eeprom_extract_raw /dev/$ubi $offset $swap
}

case "$FIRMWARE" in
"ath9k-eeprom-pci-0000:00:0e.0.bin"|"ath9k-eeprom-pci-0000:01:00.0.bin")
	local board=$(lantiq_board_name)
	case $board in
		ARV7518PW)
			ath9k_eeprom_extract "boardconfig" 1024 0
			;;
		ARV8539PW22)
			ath9k_eeprom_extract "art" 1024 0
			;;
		BTHOMEHUBV2B)
			ath9k_eeprom_extract "art" 0 0
			;;
		BTHOMEHUBV3A)
			ath9k_eeprom_extract "art-copy" 0 0
			;;
		BTHOMEHUBV5A)
			ath9k_eeprom_extract "caldata" 4096 0
			;;
		DGN3500)
			ath9k_eeprom_extract "calibration" 61440 1
			;;
		FRITZ3370|FRITZ7320|FRITZ7360SL)
			ath9k_eeprom_extract "urlader" 2437 1
			;;
		TDW8970|TDW8980)
			ath9k_eeprom_extract "boardconfig" 135168 0
			;;
		*)
			ath9k_eeprom_die "board $board is not supported yet"
			;;
	esac
	;;
esac
